<div class="container">
  <div class="row">
  <% @restaurants.each do |restaurant| %>
    <div class="col-xs-12 col-sm-6 col-md-4">
      <div class="card">
          <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
